<!-- Blur Overlay (top-level) --><!-- Product Grid -->
<div class="relative grid grid-cols-1 gap-6 p-6 md:grid-cols-2 lg:grid-cols-3">
  <!-- Single Product Card -->
  <div
    class="relative max-w-sm overflow-hidden rounded bg-white shadow-lg dark:bg-gray-800"
  >
    <!-- Product Image -->
    <img
      class="h-64 w-full object-cover"
      src="/assets/images/starry-night.jpg"
      alt="The Starry Night"
    />

    <!-- Product Info -->
    <div class="p-4">
      <h2 class="mb-2 text-xl font-bold text-gray-900 dark:text-gray-100">
        The Starry Night
      </h2>
      <p class="mb-4 text-sm text-gray-700 dark:text-gray-300">
        High-quality replica of The Starry Night by the Dutch post-impressionist
        painter Vincent van Gogh.
      </p>
      <p class="mb-4 font-semibold text-gray-900 dark:text-gray-100">$79.99</p>

      <!-- Snipcart Add to Cart Button -->
      <button
        class="snipcart-add-item w-full rounded bg-blue-600 px-4 py-2 font-bold text-white hover:bg-blue-700"
        data-item-id="starry-night"
        data-item-price="79.99"
        data-item-url="/"
        data-item-name="The Starry Night"
        data-item-description="High-quality replica of The Starry Night by Vincent van Gogh."
        data-item-image="/assets/images/starry-night.jpg"
        data-item-custom1-name="Frame color"
        data-item-custom1-options="Black|Brown|Gold"
      >
        Add to cart
      </button>
    </div>
  </div>
